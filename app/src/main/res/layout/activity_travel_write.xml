<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.TravelWriteActivity">

    <LinearLayout
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_travel_write_pic"
            app:reverseLayout="true"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="120dp"/>

        <TextView
            android:text="제목"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#2980B9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/sp_local_write"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="10dp"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />


        <EditText
            android:id="@+id/et_travel_write_title"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="제목을 입력해 주세요"
            android:textStyle="bold"
            android:textSize="20dp"/>
        </LinearLayout>


        <TextView
            android:layout_marginTop="50dp"
            android:text="후기"
            android:textColor="#2980B9"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <EditText
            android:id="@+id/et_travel_write_content"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:hint="후기를 작성해 주세요."
            android:inputType="textMultiLine"
            android:lines="10"
            android:scrollHorizontally="false"
            android:textSize="20dp" />


        <Button
            android:id="@+id/btn_travel_write_submit"
            android:layout_marginTop="20dp"
            android:text="작성"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>



</androidx.appcompat.widget.LinearLayoutCompat>